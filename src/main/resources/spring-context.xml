<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <!-- 添加对Annotation的支持 -->
    <context:annotation-config/>

    <!-- 读取数据库配置信息 -->
    <context:property-placeholder location="classpath:bk-center-cfg-env.properties"/>

    <!-- 系统数据源配置 -->
    <!-- 配置dataSource STOCK 数据库数据源 -->
    <bean id="stockDataSource" destroy-method="close" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${jdbc.buttonwood.stock.driverClassName}"/>
        <property name="jdbcUrl" value="${jdbc.buttonwood.stock.url}"/>
        <property name="user" value="${jdbc.buttonwood.stock.username}"/>
        <property name="password" value="${jdbc.buttonwood.stock.password}"/>
        <!--初始化时获取的连接数，取值应在minPoolSize与maxPoolSize之间。Default: 3 -->
        <property name="initialPoolSize" value="1"/>
        <!--连接池中保留的最小连接数。 -->
        <property name="minPoolSize" value="1"/>
        <!--连接池中保留的最大连接数。Default: 15 -->
        <property name="maxPoolSize" value="300"/>
        <!--最大空闲时间,60秒内未使用则连接被丢弃。若为0则永不丢弃。Default: 0 -->
        <property name="maxIdleTime" value="60"/>
        <!--当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。Default: 3 -->
        <property name="acquireIncrement" value="5"/>
        <!--每60秒检查所有连接池中的空闲连接。Default: 0 -->
        <property name="idleConnectionTestPeriod" value="60"/>
    </bean>


    <!-- Mybatis 配置段 STOCK数据源配置 -->
    <!-- SessionFactory -->
    <bean id="stockSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="stockDataSource"/>
        <property name="mapperLocations" value="classpath*:com/bellwin/brokers/modules/center/mapper/*.xml"/>
    </bean>
    <!-- 事务配置
    <bean id="stockTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="stockDataSource"/>
    </bean>-->
    <!-- 自动描述map.xml文件 -->
    <bean id="stockMapperScaner" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.bellwin.brokers.modules.center.dao"/>
        <property name="sqlSessionFactoryBeanName" value="stockSqlSessionFactory"/>
    </bean>

    <!-- Struts 配置 -->
    <!-- 分别扫描 @Controller;@Service;@Repository -->
    <context:component-scan
            base-package="com.bellwin.brokers.center.web.controllers,com.bellwin.brokers.center.web.services,com.bellwin.brokers.modules.center"
            use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
        <context:include-filter type="annotation" expression="org.springframework.beans.factory.annotation.Autowired"/>
    </context:component-scan>
</beans>